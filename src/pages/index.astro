---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Card from "@/components/Card.astro";
import ScrollIcon from "@/components/icons/ScrollIcon.astro";
import Orbit from "@/components/Orbit.astro";
import Timeline from "@/components/Timeline.astro";
import LinkedInIcon from "@/components/icons/LinkedInIcon.astro";
import LinkButton from "@/components/LinkButton.astro";
import Projects from "@/components/Projects.astro";
---

<Layout title="Portfolio - Robert Iskandarani">
  <main class="w-full flex flex-col items-center">
    <SectionContainer class="flex h-dvh justify-center items-center relative">
      <Card />
      <ScrollIcon
        class="hidden md:block md:absolute md:bottom-3 md:animate-bounce"
      />
    </SectionContainer>

    <SectionContainer
      id="Experiencia"
      class="flex min-h-dvh justify-center items-center relative my-16"
    >
      <div class="w-11/12 sm:w-2/3 flex-col justify-center items-start">
        <div
          class="flex flex-col sm:flex-row justify-between items-center w-full"
        >
          <h1
            class="text-white text-3xl md:text-5xl font-bold my-8 uppercase"
          >
            Experiencia laboral
          </h1>
          <LinkButton
            href="https://www.linkedin.com/in/robertiskandarani/"
          >
            <LinkedInIcon slot="icon" />
            Ver Linkedin
          </LinkButton>
        </div>
        <Timeline />
      </div>
    </SectionContainer>

    <SectionContainer
      id="Proyectos"
      class="min-h-dvh flex flex-col justify-center items-center relative"
    >
      <div class="w-11/12 sm:w-2/3 flex-col justify-center items-start">
        <h1
          class="text-white text-3xl text-center sm:text-left md:text-5xl font-bold my-8 uppercase"
        >
          Mis Proyectos
        </h1>
        <Projects />
      </div>
    </SectionContainer>

    <SectionContainer
      id="Tecnologias"
      class="flex min-h-dvh justify-center items-center relative my-16"
    >
      <Orbit />
    </SectionContainer>
  </main>
</Layout>
