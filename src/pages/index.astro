---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Card from "@/components/Card.astro";
import ScrollIcon from "@/components/icons/ScrollIcon.astro";
import Orbit from "@/components/Orbit.astro";
import Timeline from "@/components/Timeline.astro";
import LinkedInIcon from "@/components/icons/LinkedInIcon.astro";
import LinkButton from "@/components/LinkButton.astro";
import Projects from "@/components/Projects.astro";
import SectionTitle from "@/components/SectionTitle.astro";
import ProjectsBackground from "@/components/ProjectsBackground.astro";
---

<Layout title="Portfolio - Robert Iskandarani">
  <main class="w-full flex flex-col items-center">
    <SectionContainer
      id="#"
      class="flex h-dvh justify-center items-center relative"
    >
      <Card />
      <ScrollIcon class="block absolute bottom-3 animate-bounce" />
    </SectionContainer>

    <SectionContainer
      id="experiencia"
      class="flex min-h-dvh justify-center items-center relative my-16"
    >
      <div class="w-11/12 sm:w-2/3 flex-col justify-center items-start">
        <div
          class="flex flex-col sm:flex-row justify-between items-start sm:items-center w-full gap-4 mb-4"
        >
          <SectionTitle>Experiencia laboral</SectionTitle>
          <LinkButton href="https://www.linkedin.com/in/robertiskandarani/">
            <LinkedInIcon slot="icon" />
             Ver Linkedin
          </LinkButton>
        </div>
        <Timeline />
      </div>
    </SectionContainer>

    <SectionContainer
      id="proyectos"
      class="flex min-h-dvh flex-col justify-center items-center relative my-16"
    >
      <div class="w-11/12 sm:w-2/3 flex-col justify-center items-start">
        <SectionTitle>Mis Proyectos</SectionTitle>
        <Projects />
      </div>

      <ProjectsBackground />
    </SectionContainer>

    <SectionContainer
      id="tecnologias"
      class="flex min-h-dvh justify-center items-center relative my-16"
    >
      <Orbit />
    </SectionContainer>
  </main>
</Layout>
