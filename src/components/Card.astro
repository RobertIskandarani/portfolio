---
import Profile from "@/assets/profile.png";
---

<article id="card-container" class="[perspective:1000px]">
  <div
    id="ticket"
    class="w-[350px] aspect-[9/12] sm:w-[600px] md:w-[750px] sm:aspect-[16/9] rounded-2xl relative shadow-[0_0_10px_white] overflow-hidden"
  >
    <div
      class="w-full h-full flex flex-col-reverse sm:flex-row justify-center sm:justify-start items-center sm:items-end gap-8 p-4"
    >
      <div
        id="title-container"
        class="h-full flex flex-col justify-start sm:justify-center items-center sm:px-8 py-5 sm:py-0"
      >
        <h1
          class="transition-all duration-300 text-white text-3xl sm:text-6xl md:text-7xl font-bold text-balance my-2 uppercase"
        >
          Hola, soy Robert!
        </h1>
        <h2
          class="transition-all duration-300 text-white/80 text-md sm:text-lg md:text-xl uppercase m-0 w-full"
        >
          <span class="text-sky-400">Frontend Developer</span>
          <br />
           con conocimiento en Backend
        </h2>
      </div>

      <img
        id="profile-img"
        src={Profile.src}
        alt="Profile"
        class="w-[60%] h-auto sm:h-[95%] sm:w-auto absolute sm:right-4 -bottom-4"
      />
    </div>
    <div
      id="bg"
      class="absolute inset-0 w-full h-full bg-[#070707]/60 rounded-2xl -z-50 backdrop-blur-[1px]"
    >
    </div>
  </div>
</article>

<style>
  #ticket {
    transition:
      transform 0.5s ease-in-out,
      scale 0.5s ease-in-out;
  }

  #ticket:hover {
    transition: scale 0.5s ease-in-out;
    scale: 1.1;
  }

  #profile-container,
  #title-container,
  #profile-img {
    z-index: -1;
  }
</style>

<script src="../scripts/card.js"></script>
