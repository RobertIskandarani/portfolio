---
import NavLinkButton from "./NavLinkButton.astro";
---

<header class="w-full fixed top-0 py-5 flex justify-center z-10">
  <nav class="px-3 py-1">
    <ul
      class="flex text-white gap-2 bg-[#070707] rounded-3xl py-1 px-2 sm:px-3 relative"
    >
      <NavLinkButton href="#Experiencia" title="Experiencia" />
      <NavLinkButton href="#Proyectos" title="Proyectos" />
      <NavLinkButton href="#Tecnologias" title="TecnologÃ­as" />
    </ul>
  </nav>
</header>

<style>
  ul::after {
    content: "";
    width: 100%;
    height: 100%;
    background: linear-gradient(
      45deg,
      rgba(255, 255, 255, 0.7),
      transparent,
      rgba(255, 255, 255, 0.7),
      transparent,
      rgba(255, 255, 255, 0.7)
    );
    background-size: 800%;
    filter: blur(4px);
    border-radius: 1.5rem;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    animation: glowing 20s linear infinite;
  }

  @keyframes glowing {
    from {
      background-position: 400% 0;
    }
    to {
      background-position: 0 0;
    }
  }
</style>
