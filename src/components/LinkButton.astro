---
const { href, content } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="rounded-full mb-4 hover:bg-[#212121]/90 relative sm:mb-0 text-base font-light px-4 py-2 flex justify-center items-center gap-4 bg-[#212121]"
>
  <figure class="w-6 h-6">
    <slot name="icon" />
  </figure>
  {content}
</a>

<style>
  a::after {
    content: "";
    width: 100%;
    height: 100%;
    background: linear-gradient(
      45deg,
      rgba(255, 255, 255, 0.7),
      transparent,
      rgba(255, 255, 255, 0.7),
      transparent,
      rgba(255, 255, 255, 0.7)
    );
    background-size: 800%;
    filter: blur(1px);
    border-radius: 1.5rem;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    animation: glowing 20s linear infinite;
  }
</style>
