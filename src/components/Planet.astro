---
const { class: className, animation } = Astro.props;
---

<figure
  class={`${className} w-[10%] p-1 aspect-square flex justify-center items-center bg-white rounded-full absolute`}
>
  <slot />
</figure>

<style>
  @keyframes planet {
    from {
      box-shadow:
        0 0 0 0.5px rgba(255, 255, 255, 0.2),
        0 0 0 5px rgba(255, 255, 255, 0.05);
    }
    to {
      box-shadow:
        0 0 0 5px rgba(255, 255, 255, 0.2),
        0 0 0 10px rgba(255, 255, 255, 0.05);
    }
  }

  @keyframes orbit-2-1 {
    from {
      transform: rotate(0deg) translate(500%) rotate(0deg);
    }
    to {
      transform: rotate(360deg) translate(500%) rotate(360deg);
    }
  }

  @keyframes orbit-2-2 {
    from {
      transform: rotate(180deg) translate(500%) rotate(0deg);
    }
    to {
      transform: rotate(540deg) translate(500%) rotate(360deg);
    }
  }

  @keyframes orbit-3-1 {
    from {
      transform: rotate(0deg) translate(500%) rotate(0deg);
    }
    to {
      transform: rotate(360deg) translate(500%) rotate(360deg);
    }
  }

  @keyframes orbit-3-2 {
    from {
      transform: rotate(120deg) translate(500%) rotate(0deg);
    }
    to {
      transform: rotate(480deg) translate(500%) rotate(360deg);
    }
  }

  @keyframes orbit-3-3 {
    from {
      transform: rotate(240deg) translate(500%) rotate(0deg);
    }
    to {
      transform: rotate(600deg) translate(500%) rotate(360deg);
    }
  }
</style>
